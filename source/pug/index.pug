extends ./helpers/base_layout



block content
  

  // Loader
  .loader#loader
    .loader__content
      .loader__procces
        .loader__loader
          .loader__shape
          .loader__shape
          .loader__shape
      .loader__text loading

  // Header
  header.header
    .wrapper
      nav.header__nav
        input(type="checkbox")#hamburger
        label(for="hamburger").hamburger
          span.hamburger__line
        ul.header__nav-list
          li.header__nav-item
            a(href="#about" title="About Me").header__nav-link About
          li.header__nav-item
            a(href="#works" title="My Works").header__nav-link Works
          li.header__nav-item
            a(href="#contacts" title="My Contacts and Links").header__nav-link Contacts
      //- nav.socials.header__socials
      //-   ul.socials__list
      //-     li.socials__item
      //-       a(href="#").socials__link

      // Header's main content
      main.header__content
        .header__box
          p.header__text Hey!
          p.header__text I am
          .header__heading-box
            h1(data-typed="1").heading.header__heading
        .header__box
          p.header__text I am also
          .header__heading-box
            h1(data-typed="2").heading.header__heading
          .header__heading-box 
            h1(data-typed="3").heading.header__heading
          .header__heading-box 
            h1(data-typed="4").heading.header__heading Programmer

  // Site's main content
  main.main-content

    // About

    .about#about
      .wrapper
        h1.heading.about__title About
        p.about__text I'm Deebov and I'm 17 y.o
        p.about__text I'm Full-stack developer whose programming is his life
        p.about__text 
          | You can see my general resume 
          a(href="#" title="Click to see my resume").about__link here
          |  or download 
          a(href="#" title="Click here to download my resume").about__link here
        .tech-skills.about__tech-skills
          h2.heading My tech skills
          ul.tech-skills__list
            each skill in techSkills
              li(class='tech-skills__item' + (skill.accent ? ' tech-skills__item--accent' : '')) #{skill.name} /
        .list.about__skills
          h1.heading.list__heading Professional and Personal skills
          ul.list__list
            each skill in ['Enthusiast', 'Responsible', 'Writing clean and reusable code', 'Responsive and Cross-browser design']
              li.list__item= skill

    // Works

    .works#works
      .wrapper
        .list.works__list
          h1.heading.list__heading Works
          ul.list__list

            // Work list
            each work in works
              li.list__item
                a(href="#" title=`${work.title}`).link.works__link= work.name
                .modal
                  .modal__container
                    .modal__top 
                      | #{work.title}
                      .modal__close x
                    .modal__content
                      picture.modal__img
                        source(srcset=`assets/img/${work.sourceImg}` media="(max-width: 600px)")
                        img(srcset=`${work.srcset}`, alt=`${work.alt}`).modal__img
                      p.modal__text !{work.description} !{work.sourceCode}
                        
                      a(href=`${work.link}` title="See this project" target="_blank").modal__btn See

    .contacts#contacts
      .wrapper
        .list.contacts__list
          h1.heading.list__heading Contacts
          ul.list__list
            li.list__item 
              | Email: 
              a(href="mailto:deebov@yandex.com").link.contacts__link deebov@yandex.com
              
            li.list__item 
              | Phone: 
              a(href="tel:+998-99-753-55-46").link +998 99 753 55 46
            li.list__item 
              a(href="https://www.linkedin.com/in/deebov/" target="_blank" title="See my LinkedIn profile").link.contacts__link LinkedIn
            li.list__item 
              a(href="https://github.com/deebov" target="_blank" title="See my GitHub profile").link.contacts__link GitHub
            li.list__item 
              a(href="https://codepen.io/deebov/" target="_blank" title="See my Codepen profile").link.contacts__link Codepen
            li.list__item 
              a(href="https://www.instagram.com/code_deebov/" target="_blank" title="See my Instagram profile").link.contacts__link Instagram
  footer.footer
    p.footer__text 
    | All rights reserved. Built by deebov with
    span.footer__heart 
    | . deebov &copy;
  